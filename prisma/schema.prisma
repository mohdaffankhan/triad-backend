generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TestimonialType {
  GENERAL
  COURSE
}

model Mentor {
  id          String @id @default(cuid())
  name        String
  image       String
  experience  String
  designation String
  linkedinUrl String
  qoute       String

  courses CourseMentor[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id              String @id @default(cuid())
  title           String
  coverImage      String
  category        String
  description     String
  durationDays    Int
  level           String
  commitmentHours Int

  originalPrice   Int
  discountedPrice Int
  features        String[]
  isRunning       Boolean  @default(false)

  mentors      CourseMentor[]
  tools        CourseTool[]
  testimonials Testimonial[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseMentor {
  id String @id @default(cuid())

  courseId String
  mentorId String

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  mentor Mentor @relation(fields: [mentorId], references: [id], onDelete: Cascade)

  @@unique([courseId, mentorId])
}

model Tool {
  id          String  @id @default(cuid())
  name        String
  description String
  url         String
  icon        String?
  coverImage  String?

  courses CourseTool[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseTool {
  id       String @id @default(cuid())
  courseId String
  toolId   String

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  tool   Tool   @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([courseId, toolId])
}

model Workshop {
  id          String @id @default(cuid())
  name        String
  description String
  category    String
  venue       String
  date        String
  coverImage  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Institution {
  id    String @id @default(cuid())
  name  String
  logo  String
  city  String
  state String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PrivacyPolicy {
  id            String @id @default(cuid())
  content       String
  effectiveDate String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TermsOfService {
  id            String @id @default(cuid())
  content       String
  effectiveDate String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Journey {
  id          String   @id @default(cuid())
  title       String
  description String
  coverImage  String?
  date        String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Career {
  id          String   @id @default(cuid())
  title       String
  description String
  location    String
  type        String
  featured    Boolean  @default(false)
  applyLink   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id           String   @id @default(cuid())
  email        String
  phone        String
  country_code String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Social {
  id        String   @id @default(cuid())
  name      String
  url       String
  icon      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Metrics {
  id                  String @id @default("singleton")
  total_students      Int
  total_workshops     Int
  total_projects      Int
  total_courses       Int
  total_mentors       Int
  total_institutes    Int
  total_cities        Int
  total_states        Int
  total_content_hours Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id    String          @id @default(cuid())
  name  String
  role  String?
  image String?
  quote String
  type  TestimonialType @default(GENERAL)

  courseId String?
  course   Course? @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}
