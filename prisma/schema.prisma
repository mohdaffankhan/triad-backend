generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Mentor {
  id          String @id @default(cuid())
  name        String
  image       String
  experience  String
  designation String
  linkedinUrl String

  courses CourseMentor[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id              String @id @default(cuid())
  title           String
  coverImage      String
  category        String
  description     String
  durationDays    Int
  level           String
  commitmentHours Int

  originalPrice   Int
  discountedPrice Int
  features        String[]

  mentors CourseMentor[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseMentor {
  id String @id @default(cuid())

  courseId String
  mentorId String

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  mentor Mentor @relation(fields: [mentorId], references: [id], onDelete: Cascade)

  @@unique([courseId, mentorId])
}

model Tool {
  id          String @id @default(cuid())
  name        String
  description String
  url         String
  icon        String?
  coverImage  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Workshop {
  id          String @id @default(cuid())
  name        String
  description String
  category    String
  venue       String
  date        String
  coverImage  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Institution {
  id   String @id @default(cuid())
  name String
  logo String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PrivacyPolicy {
  id            String   @id @default(cuid())
  content       String
  effectiveDate String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TermsOfService {
  id            String   @id @default(cuid())
  content       String
  effectiveDate String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Journey {
  id          String   @id @default(cuid())
  title       String
  description String
  coverImage  String?
  date        String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Career {
  id          String   @id @default(cuid())
  title       String
  description String
  location    String
  type        String
  featured    Boolean  @default(false)
  applyLink   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
